@model BusTicket.MvcWebUI.Models.AdminViewModel
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Müşteri Listesi</h4>
                    </div>
                    <div style="text-align:right; margin-right:5px;">
                        <a href="/Admin/AddCustomer" class="btn btn-success">Ekle</a>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>ID</th>
                            <th>AD</th>
                            <th>SOYAD</th>
                            <th>TELEFON</th>
                            <th>EMAİL</th>
                            <th>ŞİFRE</th>
                            <th>GÜNCELLE</th>
                            <th>SİL</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Customers)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Password</td>
                                        <td><a href="/Admin/GetCustomer/@item.Id" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Admin/DeleteCustomer/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>