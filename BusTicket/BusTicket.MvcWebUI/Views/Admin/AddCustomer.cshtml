@model BusTicket.Entities.Concrete.Customer
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3>Müşteri Ekle</h3>
                <br />
                <div class="card">
                    <form class="form-group" method="post">
                        <label>AD</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "required" })
                        <br />
                        <label>SOYAD</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @required = "required" })
                        <br />
                        <label>PHONE</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @required = "required" })
                        <br />
                        <label>EMAİL</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @required = "required" })
                        <br />
                        <label>ŞİFRE</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @required = "required" })
                        <br />
                        <button class="btn btn-success">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>