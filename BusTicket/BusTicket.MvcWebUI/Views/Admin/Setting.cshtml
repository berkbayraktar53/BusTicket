@model BusTicket.MvcWebUI.Models.AdminViewModel
@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Admin Listesi</h4>
                    </div>
                    <div style="text-align:right; margin-right:5px;">
                        <a href="/Admin/AddManager" class="btn btn-success">Ekle</a>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>ID</th>
                            <th>AD</th>
                            <th>EMAİL</th>
                            <th>ŞİFRE</th>
                            <th>GÜNCELLE</th>
                            <th>SİL</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Managers)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Password</td>
                                        <td><a href="/Admin/GetManager/@item.Id" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Admin/DeleteManager/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>