@model BusTicket.MvcWebUI.Models.AdminViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Satın Alınan Biletler</h4>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>ID</th>
                            <th>AD</th>
                            <th>SOYAD</th>
                            <th>TELEFON</th>
                            <th>ÜCRET</th>
                            <th>SİL</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Payments)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Admin/DeletePayment/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Bilet Listesi</h4>
                    </div>
                    <div style="text-align:right; margin-right:5px;">
                        <a href="/Admin/AddTicket" class="btn btn-success">Ekle</a>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>ID</th>
                            <th>TARİH</th>
                            <th>KALKIŞ SAATİ</th>
                            <th>VARIŞ SAATİ</th>
                            <th>LOKASYON</th>
                            <th>KOLTUK NO</th>
                            <th>ÜCRET</th>
                            <th>GÜNCELLE</th>
                            <th>SİL</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Tickets)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Date</td>
                                        <td>@item.DepartureTime</td>
                                        <td>@item.ArrivalTime</td>
                                        <td>@item.Location</td>
                                        <td>@item.SeatNumber</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Admin/GetTicket/@item.Id" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Admin/DeleteTicket/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>